{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/frontend/src/*"]
    }
  },
  "include": [
    "./src/frontend/src/**/*.ts",
    "./src/frontend/src/**/*.d.ts",
    "./src/frontend/src/**/*.tsx",
    "./src/frontend/src/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
